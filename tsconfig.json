{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "ES6"],
    "jsx": "react",
    "removeComments": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "types/*": ["@types/*"],
      "css/*": ["css/*"]
    }
  }
}
